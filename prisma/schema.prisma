generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  description String?
  image String?
  price Float
  //Relationship with Categories is many-to-many
  categories Category[] @relation("ProductCategory")
}

model Category {
  id Int @id @default(autoincrement())
  name String
  //Relationship with Product is many-to-many
  products Product[] @relation("ProductCategory")
}